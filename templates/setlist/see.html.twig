{% extends 'base.html.twig' %}

{% block title %}Setlistify{% endblock %}

{% block header %}{{setlist.name | upper}}{% endblock %}

{% block body %}

    <hr />

    <div class="col">
        <div class="row">
            <div class="col-sm-3">
                <h3 class="text-center">{{ setlist.name |capitalize }}</h3>
                <p class="text-center i">{{ setlist.date|date('Y-m-d') }}</p>
                <p class="text-center">
                    {% trans with {'%venue%':setlist.venue,'%city%': setlist.city} %}
                        At the %venue% in %city%
                    {% endtrans %}
                </p>             
            </div>
            <div class="col-sm-9">
                <iframe src="https://open.spotify.com/embed/playlist/{{setlist.spotifyId}}&theme=white" width="100%"height="600" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>
        </div>
    </div>

{% endblock %}