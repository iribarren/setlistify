{% extends 'base.html.twig' %}

{% block title %}Setlistify{% endblock %}

{% block header %}{{setlist.name}}{% endblock %}

{% block body %}

    <hr />

    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <h3 class="text-center"><a href="{{ path('setlists_see',{'id' : setlist.id}) }}">{{ setlist.name }}</a></h3>
            </div>
            <div class="col-sm-9">
                <iframe src="https://open.spotify.com/embed/playlist/{{setlist.spotifyId}}&theme=white" width="100%"height="600" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>
        </div>
    </div>

{% endblock %}