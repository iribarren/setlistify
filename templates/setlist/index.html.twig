{% extends 'base.html.twig' %}

{% block title %}Setlistify{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Your setlists</h1>
    </div>

    <div class="container">
        {% for setlist in setlists %} 
        <div class="row">
            <div class="col-sm-3">
                <h3 class="text-center">{{ setlist.name }}</h3>
            </div>
            <div class="col-sm-9">
                <iframe src="https://open.spotify.com/embed/playlist/{{setlist.spotifyId}}&theme=white" width="100%"height="340" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
