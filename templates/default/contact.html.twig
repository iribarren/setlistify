{% extends 'base.html.twig' %}

{% block title %}Setlistify{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Contact</h1>
    </div>

    <form method="post">
        <div class="form-group row">
            <label class="col-form-label col-sm-2 required text-right" for="subject">Subject</label>
            <div class="col-sm-10">
                <input type="subject" name="subject" id="subject" class="form-control" placeholder="Subject" required />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 required text-right" for="message">Your Message</label>
            <div class="col-sm-10">
                <textarea type="message" name="message" id="message" class="form-control" placeholder="Write here your message" rows="8" required></textarea>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <div class="form-group row">
            <div class="col-sm-12">
                <button class="btn btn-lg btn-light float-right" type="submit">Send</button>
            </div>
        </div>

    </form>

{% endblock %}
